@model List<MyELearningProject.DAL.Entities.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <!-- Column -->
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-block">
                <center class="m-t-30">
                    <img src="~/Templates/material-lite-master/assets/images/users/yonetici.jpg" style="height:200px; width:200px;" class="img-circle" width="200" />
                    <h4 class="card-title m-t-10">Aslı Kaya</h4>
                    <h6 class="card-subtitle">Sayfa Yöneticisi</h6>
                    <div class="row text-center justify-content-md-center">
                        <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-people"></i> <font class="font-medium">254</font></a></div>
                        <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-picture"></i> <font class="font-medium">54</font></a></div>
                    </div>
                </center>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-block">
                <form class="form-horizontal form-material">
                    @foreach (var item in Model)
                    {
                    <div class="form-group">
                        <label class="col-md-12">Ad Soyad</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@item.Name @item.Surname" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Email</label>
                        <div class="col-md-12">
                            <input type="email" placeholder="@item.Email" class="form-control form-control-line" name="example-email" id="example-email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Şifre</label>
                        <div class="col-md-12">
                            <input type="password" value="@item.Password" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Telefon</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="0(535) 535 3535" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Hakkımda</label>
                        <div class="col-md-12">
                            <textarea rows="5" class="form-control form-control-line">@item.Description</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12">Ülke</label>
                        <div class="col-sm-12">
                            <select class="form-control form-control-line">
                                <option>Turkey</option>
                                <option>London</option>
                                <option>Usa</option>
                                <option>Canada</option>
                                <option>Thailand</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Profili Güncelle</button>
                        </div>
                    </div>
                    }
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>

