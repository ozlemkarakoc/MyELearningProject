@model List<MyELearningProject.DAL.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Referans Listesi</h3>
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Adı Soyadı</th>
                        <th>Meslek</th>
                        <th>Yorum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td><img src="@item.ImageUrl" class="round mx-auto d-block" style="width:50px; height50px;" /></td>
                    <td class="mx-auto">@item.NameSurname</td>
                    <td>@item.Title</td>
                    <td>@item.Comment</td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                </tr> 
            }
                </table>
                <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-primary">Yeni Referans Girişi</a>
            </div>
        </div>
    </div>
</div>